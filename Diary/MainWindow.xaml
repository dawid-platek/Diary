<Window x:Class="Diary.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Diary"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Button Click="Button_Click" Grid.Row="0" Grid.Column="0" Margin="15" Content="Przycisk 1"/>
        <Button Grid.Row="0" Grid.Column="1" Margin="15" Content="Przycisk 2"/>
        <Button Grid.Row="1" Grid.Column="0" Margin="15" Content="Przycisk 3"/>
        <Button Grid.Row="1" Grid.Column="1" Margin="15" Content="Przycisk 4"/>
    </Grid>
</Window>
