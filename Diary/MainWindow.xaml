<Window x:Class="Diary.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Diary"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="Dziennik ucznia" Height="450" Width="800">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>

            <RowDefinition />
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal">
            <Button Content="Dodaj"  />
            <Button Content="Edytuj" />
            <Button Content="Usuń" />
            <ComboBox />
            <Button Style="{StaticResource BtnRefreshStyle}" Content="Odśwież" />

            <Button>
                <Button.Content>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                        <Image Width="100" Height="20" Source="/Icons/brand-google.png"/>
                        <Label Content="Test" FontSize="10"/>
                    </StackPanel>
                </Button.Content>
            </Button>

        </StackPanel>
        <DataGrid Grid.Row="1" Margin="5">

        </DataGrid>
    </Grid>
</Window>
